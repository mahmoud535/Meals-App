<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MealsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#1E1E1E</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryText</item>
        <item name="colorSecondaryVariant">@color/MV</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="border">
        <item name="cornerSize">5%</item>
    </style>

    <style name="Theme.MealsApp" parent="Base.Theme.MealsApp" />


    // ------------------------------------------- EditText----------------------------------------
    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:background">@drawable/rounded_edittext_register_login</item>
        <item name="android:ems">10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14dp</item>

    </style>

    // ------------------------------------------- Button ------------------------------------------
    <style name="Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/btn_textSize</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_39sdp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>